@page "/Admin/SendNewsLetter"
@model Mqeb.Web.Pages.Admin.NewsLetter.SendNewsLetterModel
@{
    ViewData["Title"] = "ارسال خبرنامه";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> پنل مدیریت</a></li>
        <li><a href="/Admin/SendNewsLetter">@ViewData["Title"]</a></li>
    </ol>
</section>

<section class="content">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewData["Title"]</h3>
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="SendNewsLetterViewModel.Title"></label>
                        <input asp-for="SendNewsLetterViewModel.Title" class="form-control" type="text" placeholder="عنوان پیام">
                        <span asp-validation-for="SendNewsLetterViewModel.Title" class="text-primary"></span>
                        <br>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="SendNewsLetterViewModel.Description"></label>
                        <textarea asp-for="SendNewsLetterViewModel.Description" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="SendNewsLetterViewModel.Description" class="text-danger"></span>
                        <br>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">ارسال</button>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('SendNewsLetterViewModel_Description', {
            customConfig: '/AdminContent/dist/js/Config.js'
        });

    </script>

    <partial name="_ValidationScriptsPartial" />
}
