@page
@model Mqeb.Web.Pages.Admin.Banner.IndexModel
@{
    ViewData["Title"] = "لیست بنر ها";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> پنل مدیریت</a></li>
        <li><a href="/Admin/Banner">بخش بنر ها</a></li>
        <li><a href="/Admin/Banner">@ViewData["Title"]</a></li>

    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-sm-5 col-md-5">
            <a class="btn btn-success" href="/Admin/Banner/CreateBanner">افزودن بنر جدید</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead class="thead-background">
                    <tr>
                        <th>تصویر بنر</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody class="tbody-background">
                    @foreach (var item in Model.Banners)
                    {
                        <tr>
                            <td>
                                <img src="/Banner/@item.BannerImageName" width="100"/>
                            </td>
                            <td>
                                <form method="post">
                                    <button type="submit" formaction="/Admin/Banner/DeleteBanner?bannerId=@item.BannerId&handler=delete" class="btn btn-danger btn-sm">
                                        حذف
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</section>
