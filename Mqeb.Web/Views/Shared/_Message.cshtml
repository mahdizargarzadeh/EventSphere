@if (TempData["ErrorMessage"] != null ||
   TempData["InfoMessage"] != null ||
   TempData["SuccessMessage"] != null ||
   TempData["WarningMessage"] != null)
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                ShowMessage('موفقیت', '@TempData["SuccessMessage"]', 'success');
            });
        </script>
    }
    if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                ShowMessage('اطلاع', '@TempData["InfoMessage"]', 'info');
            });
        </script>
    }
    if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                ShowMessage('اخطار', '@TempData["ErrorMessage"]', 'error');
            });
        </script>
    }
    if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                ShowMessage('مشکل', '@TempData["WarningMessage"]', 'warning');
            });
        </script>
    }
}